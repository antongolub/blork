{
	"extends": "tslint:all",
	"rules": {
		// Use tabs for indentation.
		"indent": [true, "tabs"],
		// Use single quotes for strings.
		"quotemark": [true, "single"],
		// Don't require interfaces to start with an 'I' character.
		"interface-name": false,
		// Strip useless type definitions that can be inferred (e.g. str:string = 'string').
		"no-inferrable-types": true,
		// Don't need explicit type definitions as TypeScript already requires this.
		// (Also this rule clashes with no-inferrable-types.)
		"typedef": false,
		// Allow lines of any length.
		"max-line-length": false,
		// Disable 'align'.
		"align": false,
		// Enable this, but not if function stretches onto multiple lines.
		"arrow-return-shorthand": true,
		// Allow return to be smushed under certain circumstances.
		"newline-before-return": false,
		// Allow object properties to be in any order.
		"object-literal-sort-keys": false,
		// Allow imports to be in any order.
		"ordered-imports": false,
		// Allow single-line if/do/while statements.
		"curly": [true, "ignore-same-line"],
		// Allow relaxed boolean checks (typing === true all the time is frustrating).
		"strict-boolean-expressions": false,
		// Allow normal functions.
		"only-arrow-functions": false
	}
}