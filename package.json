{
	"name": "blork",
	"description": "Blork! Mini (non-static) argument checking in Javascript",
	"version": "1.0.0",
	"license": "0BSD",
	"author": "Dave Houlbrooke <dave@shax.com>",
	"main": "lib/blork.js",
	"types": "lib/blork.d.ts",
	"engineStrict": true,
	"engines": {
		"node": ">=6.0.0"
	},
	"dependencies": {},
	"devDependencies": {
		"pre-commit": "latest",
		"jest": "latest",
		"typescript": "latest",
		"@types/node": "latest",
		"tslint": "latest"
	},
	"scripts": {
		"fix": "tslint -p tsconfig.json --fix",
		"prebuild": "npm run fix",
		"build": "rm -rf lib && mkdir lib && tsc -p tsconfig.json",
		"pretest": "npm run build",
		"test": "jest",
		"watch": "jest --watchAll"
	},
	"pre-commit": ["build", "test"],
	"repository": {
		"type": "git",
		"url": "git://github.com/dhoulb/blork.git"
	}
}
