{
	"compilerOptions": {
		"module": "commonjs",
		"strict": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"lib": ["es2017"],
		"target": "es6",
		"declaration": true,
		"outDir": "lib"
	},
	"compileOnSave": true,
	"include": [
		"src/**/*"
	]
}